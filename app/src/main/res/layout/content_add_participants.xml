<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context="com.jaladankisuresh.android.chooseasy.AddParticipantsActivity">
    <com.android.chooseasy.ProfileAutoCompleteView
        android:id="@+id/auto_select_profiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:padding="@dimen/text_margin_small"
        android:dividerPadding="@dimen/divider_padding"
        android:completionThreshold="3"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_app_profiles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>